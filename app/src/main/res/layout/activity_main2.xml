                            android:textSize="23dp"
                            android:text="+"

                            android:textColor="@color/black"
                            android:padding="10dp"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif-black"/>


                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>




            </com.google.android.material.card.MaterialCardView>



